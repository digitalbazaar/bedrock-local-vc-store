{
  "name": "bedrock-local-vc-store",
  "version": "1.0.1-0",
  "description": "A Javascript library for locally storing Verifiable Credentials for Bedrock web apps.",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run lint && npm run test-node && npm run test-karma",
    "test-node": "mocha -r esm --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} --require tests/test-mocha.js tests/*.spec.js",
    "test-karma": "karma start karma.conf.js",
    "test-watch": "mocha -r esm --watch --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} --require tests/test-mocha.js tests/*.spec.js",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-ci": "nyc --reporter=lcovonly npm run test-node",
    "coverage-report": "nyc report",
    "lint": "eslint ."
  },
  "homepage": "https://github.com/digitalbazaar/bedrock-local-vc-store",
  "author": {
    "name": "Digital Bazaar, Inc.",
    "email": "support@digitalbazaar.com",
    "url": "https://digitalbazaar.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/bedrock-local-vc-store"
  },
  "bugs": {
    "url": "https://github.com/digitalbazaar/bedrock-local-vc-store/issues",
    "email": "support@digitalbazaar.com"
  },
  "files": [
    "lib/"
  ],
  "dependencies": {
    "pouchdb": "^7.2.2",
    "pouchdb-adapter-memory": "^7.2.2",
    "pouchdb-find": "^7.2.2"
  },
  "keywords": [
    "Verifiable",
    "Credential",
    "Query",
    "Linked Data"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "babel-loader": "^8.0.5",
    "bedrock-local-vc-store": "file:.",
    "chai": "^4.3.4",
    "eslint": "^7.3.1",
    "eslint-config-digitalbazaar": "^2.3.0",
    "esm": "^3.2.22",
    "karma": "^4.0.1",
    "karma-babel-preprocessor": "^8.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "mocha": "^7.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.0",
    "webpack": "^4.29.6"
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  }
}
